<div class="mx-auto max-w-lg">
    <div class="bg-white shadow-lg rounded-lg p-8">
    <h1 class="text-2xl font-bold mb-4 text-center">Add New Product</h1>

    <%= form_with(model: @product, url: @product ? product_path : products_path, method: @product ? :put : :post, class: "space-y-4", id: "products-form") do |form| %>
        <div>
        <%= form.label :name, class: "block font-medium text-gray-700" %>
        <%= form.text_field :name, value: @product&.name || "", class: "p-2 form-input border mt-1 block w-full rounded-md border-gray-300 focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
        </div>

        <div>
        <%= form.label :description, class: "block font-medium text-gray-700" %>
        <%= form.text_area :description, value: @product&.description || "", class: "p-2 form-textarea border mt-1 block w-full rounded-md border-gray-300 focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50", rows: 4 %>
        </div>

        <div>
        <%= form.label :price, class: "block font-medium text-gray-700" %>
        <%= form.number_field :price, value: @product&.price || "", class: "p-2 form-input border mt-1 block w-full rounded-md border-gray-300 focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
        </div>

        <% if @product %>
        <div class="flex justify-center">
            <%= form.submit "Update Product", class: "bg-blue-500 text-white px-6 py-3 rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50" %>
        </div>
        <% else %>
        <div class="flex justify-center">
            <%= form.submit "Add Product", class: "bg-blue-500 text-white px-6 py-3 rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50" %>
        </div>
        <% end %>
    <% end %>
    </div>
</div>